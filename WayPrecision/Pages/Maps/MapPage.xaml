<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WayPrecision.MapPage"
             Title="WayPrecision">

    <Grid RowDefinitions="*,Auto, Auto" Padding="0">
        <WebView x:Name="MapWebView"
     Grid.Row="0"
     HorizontalOptions="Fill"
     VerticalOptions="Fill" />

        <!-- Banner para indicar estado de conexión -->
        <Border x:Name="pnNoInternet" Background="{StaticResource Primary300}"
                Padding="12"
                HorizontalOptions="Center"
                VerticalOptions="Start"
                Margin="12"
                IsVisible="False">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="8" />
            </Border.StrokeShape>
            <Label TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" Text="Sin conexión a Internet" />
        </Border>

        <!-- Panel flotante para lat/lon -->
        <Border x:Name="pnGpsData" Background="{StaticResource Gray100}"
       Padding="10"
                Opacity="0.7"
       HorizontalOptions="Center"
       VerticalOptions="End"
       Margin="20"
       IsVisible="False">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10" />
            </Border.StrokeShape>
            <VerticalStackLayout Spacing="5">
                <Label x:Name="lbLatitud" Text="Lat: -" TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Black}}" />
                <Label x:Name="lbLongitud" Text="Lng: -" TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Black}}" />
                <Label x:Name="lbPrecision" Text="Precisión: -" TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Black}}" />
                <Label x:Name="lbZoom" Text="Zoom: -" TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Black}}" />
            </VerticalStackLayout>
        </Border>

        <HorizontalStackLayout x:Name="BtnStackLayoutDefault" Grid.Row="1" Padding="12" Spacing="12" HorizontalOptions="Center">
            <Button x:Name="btnGpsData" Text="" ImageSource="{AppThemeBinding Light=satellite32x32.png, Dark=satellite32x32dark.png}" Style="{StaticResource SecondaryButton}" />
            <Button x:Name="btnCreateWaypoint" Text="" ImageSource="{AppThemeBinding Light=waypoint32x32.png, Dark=waypoint32x32dark.png}" Style="{StaticResource SecondaryButton}" />
            <Button x:Name="btnCreateTrack" Text="" ImageSource="{AppThemeBinding Light=track32x32.png, Dark=track32x32dark.png}" Style="{StaticResource SecondaryButton}" />
        </HorizontalStackLayout>

        <VerticalStackLayout  x:Name="BtnStackLayoutTracking" Grid.Row="1">
            <HorizontalStackLayout Padding="10" Spacing="10" HorizontalOptions="Center">
                <Button x:Name="btnPlay" Text="" ImageSource="{AppThemeBinding Light=play32x32.png, Dark=play32x32dark.png}" Style="{StaticResource SecondaryButton}" />
                <Button x:Name="btnPause" Text="" ImageSource="{AppThemeBinding Light=pause32x32.png, Dark=pause32x32dark.png}" Style="{StaticResource SecondaryButton}" />
                <Button x:Name="btnStop" Text="" ImageSource="{AppThemeBinding Light=stop32x32.png, Dark= stop32x32dark.png}" Style="{StaticResource SecondaryButton}" />
                <Button x:Name="btnCancel" Text="" ImageSource="close32x32.png" Style="{StaticResource SecondaryButton}" />
            </HorizontalStackLayout>
            <HorizontalStackLayout Grid.Row="2" Padding="0,5,0,10" Spacing="10" HorizontalOptions="Center">
                <Label x:Name="lbTotalPoints" Text="Puntos: 0" VerticalOptions="Center" TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>